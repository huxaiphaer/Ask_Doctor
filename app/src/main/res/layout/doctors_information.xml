<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:weightSum="1">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/textView7"
                android:layout_gravity="center_horizontal" />




            <text.customization.Grenale
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:textColor="#565505"
                android:text="Doctors Name"

                android:paddingTop="50dp"
                android:textSize="26dp"
                android:paddingBottom="20dp"
                android:id="@+id/doctors_name"
                android:layout_gravity="center_horizontal"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.33"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="181dp"
                        android:layout_height="wrap_content">



                        <text.customization.Champagne
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:textColor="#154e11"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:paddingLeft="10dp"
                            android:id="@+id/health_centres_name" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.41">



                        <text.customization.Champagne
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:paddingLeft="10dp"
                            android:textColor="#5b0707"
                            android:textStyle="bold"
                            android:paddingBottom="35dp"
                            android:textSize="17dp"
                            android:id="@+id/specialisation" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1"><![CDATA[



                    />

                ]]>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.41">

                        TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type:"
                            android:paddingLeft="10dp"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:id="@+id/textView5" />

                        <text.customization.Digital
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:textColor="#372b3b"
                            android:textStyle="bold"
                            android:textSize="17dp"
                            android:paddingLeft="10dp"
                            android:id="@+id/workinghours" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <text.customization.Grenale
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Information"
                android:textColor="#565505"
                android:textSize="26dp"
                android:textStyle="bold"
                android:id="@+id/textView10"
                android:layout_gravity="center_horizontal" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="286dp"
                android:orientation="vertical"
                android:background="#567cce">

                <text.customization.Champagne
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/information_doctor"
                    android:text="Information"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:textSize="18dp"
                    android:textColor="#ffffff"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="54dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>