<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:background="#ffffff"
    android:weightSum="1">


    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="112dp"
        card_view:cardElevation="2dp"
        card_view:cardBackgroundColor="#e6d6ec"
        card_view:cardCornerRadius="14dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="132dp"
                android:layout_height="110dp">

                <huzykamz.jdhau.huzy.ask_doctor.RoundedImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/image_news"

                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="255dp"
                android:layout_height="match_parent">

                <text.customization.Champagne
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Headlines"
                    android:textColor="#15803a"
                    android:id="@+id/headlines"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_above="@+id/hospital_name"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <text.customization.Grenale_Itallic
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#cf1421"
                    android:text="details"

                    android:id="@+id/details"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>